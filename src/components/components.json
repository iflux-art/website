{
  "categories": {
    "ui": {
      "description": "基础UI组件",
      "scope": "全局通用",
      "usage": "构建用户界面的基础构建块，如按钮、输入框、下拉菜单等",
      "examples": ["button", "input", "select", "modal", "logo"]
    },
    "features": {
      "description": "功能型组件",
      "scope": "特定功能",
      "usage": "实现具体业务功能的复杂组件",
      "examples": ["tool-card", "blog-editor", "comment-section", "tool-actions", "tool-layout"]
    },
    "layout": {
      "description": "布局组件",
      "scope": "页面结构",
      "usage": "控制页面整体布局和结构的组件",
      "examples": ["header", "footer", "sidebar", "main-content"]
    },
    "admin": {
      "description": "管理后台组件",
      "scope": "管理系统",
      "usage": "专门用于管理后台界面的组件",
      "examples": ["data-table", "dashboard-widget", "settings-panel", "admin-actions"]
    },
    "auth": {
      "description": "认证组件",
      "scope": "用户认证",
      "usage": "处理用户登录、注册等认证相关功能的组件",
      "examples": ["login-form", "signup-form", "password-reset"]
    },
    "cards": {
      "description": "卡片展示组件",
      "scope": "内容展示",
      "usage": "以卡片形式展示内容的组件",
      "examples": ["blog-card", "product-card", "feature-card", "unified-card"]
    },
    "mdx": {
      "description": "MDX渲染组件",
      "scope": "内容渲染",
      "usage": "用于渲染和增强MDX内容的组件",
      "examples": ["code-block", "table-of-contents", "heading-with-anchor", "simple-markdown-renderer", "callout"]
    }
  },
  "guidelines": {
    "naming": {
      "rule": "使用kebab-case命名文件，使用PascalCase命名组件",
      "example": "my-component.tsx -> export function MyComponent()"
    },
    "structure": {
      "rule": "每个组件目录下可包含以下文件",
      "files": [
        "{component-name}.tsx - 主组件文件",
        "{component-name}.test.tsx - 测试文件",
        "{component-name}.module.css - 样式文件",
        "index.ts - 导出文件"
      ]
    },
    "documentation": {
      "rule": "每个组件都应该包含以下文档内容",
      "required": [
        "组件描述",
        "Props定义",
        "使用示例"
      ]
    }
  }
}