# 基础规则（与 .gitignore 保持一致）
# dependencies
/node_modules
/.pnp
.pnp.*
.yarn/*
!.yarn/patches
!.yarn/plugins
!.yarn/releases
!.yarn/versions

# testing
/coverage

# next.js
/.next/
/out/

# production
/build

# misc
.DS_Store
*.pem

# debug
npm-debug.log*
yarn-debug.log*
yarn-error.log*
.pnpm-debug.log*

# env files
.env*

# vercel
.vercel

# typescript
*.tsbuildinfo
next-env.d.ts

# turbo
.turbo

# Vercel 部署特有的规则
# 忽略缓存目录
.next/cache/**
node_modules/.cache/**
.next/trace
.turbo/**
.cache/**

# 忽略测试文件
**/*.test.ts
**/*.test.tsx
**/*.spec.ts
**/*.spec.tsx
**/__tests__/**
jest.config.js
jest.setup.js

# 忽略开发工具配置
.vscode/**
.idea/**
.github/**
.eslintrc*
.prettierrc*
.editorconfig
.git/**

# 忽略文档和备份
docs/**
backups/**
*.md
!README.md

# 忽略构建脚本和配置
scripts/dev-*
scripts/test-*
turbo.json
tsconfig.tsbuildinfo
*.log

# 忽略大型二进制文件
**/*.{psd,ai,pdf,docx,xlsx}

# 忽略不必要的包
node_modules/@swc/core-linux-*/**
node_modules/@swc/core-win32-*/**
node_modules/@swc/core-darwin-*/**
node_modules/@esbuild/linux-*/**
node_modules/@esbuild/win32-*/**
node_modules/@esbuild/darwin-*/**
node_modules/.pnpm/@swc/core-*/**
node_modules/.pnpm/@esbuild/*/**
node_modules/.pnpm/@testing-library/**
node_modules/.pnpm/jest*/**
node_modules/.pnpm/babel-jest*/**
node_modules/.pnpm/ts-node*/**
node_modules/.pnpm/typescript*/**
node_modules/.pnpm/eslint*/**
node_modules/.pnpm/@eslint*/**
node_modules/.pnpm/@typescript-eslint*/**

# 忽略源代码地图
**/*.map

# 忽略临时文件
**/Thumbs.db
**/*.tmp
**/*.temp
