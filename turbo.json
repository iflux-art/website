{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "cache": true,
      "outputs": [".next/**", "!.next/cache/**"],
      "inputs": ["src/**", "public/**", "*.config.js", "*.config.ts", "*.config.mjs", "next.config.*"],
      "command": "pnpm run build:with-translate"
    },
    "build:next": {
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "translate": {
      "outputs": ["src/content/en/**"]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "dependsOn": ["build"]
    }
  }
}